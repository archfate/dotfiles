##    song=$(mpc -f "[[%artist% - ]%title%]|[%track%]" 2>/dev/null | awk "NR==1")
#    song_mpd=$(ncmpcpp 2>/dev/null --current-song="%a â€” %t Â« ")
#    song_cmus=$(cmus-remote -C 'format_print "%t - %a"')
#
