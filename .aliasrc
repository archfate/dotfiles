# FFX_MIC="alsa_input.usb-BLUE_MICROPHONES_Blue_Snowball-00.analog-mono"
# FFX_MIC_CH="1"
# FFX_MIC_FREQ="44100"
FFX_MIC="alsa_input.usb-NA_Lenovo_Wireless_Headset_W770-00.analog-mono"
FFX_MIC_CH="2"
FFX_MIC_FREQ="44100"

# sound system
FFX_SOUNDSYS="pulse"
# FFX_SOUNDSYS="alsa"

# resolution
FFX_RESO_FULL=$(xwininfo -root | grep 'geometry' |awk '{print $2;}' | cut -d\+ -f1)

